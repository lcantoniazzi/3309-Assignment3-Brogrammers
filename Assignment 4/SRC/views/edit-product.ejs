<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (product) { %>
        <form class="add-product-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="productName">Name</label>
                    <input type="text" class="form-control" name="productName" id="productName" value="<%= product.productName %>" required disabled>
                </div>
                <div class="form-group col-md-4">
                    <label for="productType">Type</label>
                    <input type="text" class="form-control" name="productType" id="productType" value="<%= product.productType %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="stockLevel">Stock Level</label>
                    <input type="number" class="form-control" name="stockLevel" id="stockLevel" value="<%= product.stockLevel %>" required>
                </div>
            </div>
            <div class="form-row">
            <div class="form-group col-md-4">
                    <label for="productType">Price</label>
                <input type="number" class="form-control" name="price" id="price" value="<%= product.price %>" required>
            </div>
            <div class="form-group col-md-4">
                    <label for="productType">Supplier</label>
                <input type="text" class="form-control" name="supplierName" id="supplierName" value="<%= product.supplierName %>" required>
            </div><br>
        </div>
            <button type="submit" class="btn btn-success float-right">Update product</button>
        </form>
    <% } else { %>
        <p class="text-center">product Not Found. Go <a href="/add">here</a> to add products.</p>
    <% } %>
</div>
</div>
</body>
</html>